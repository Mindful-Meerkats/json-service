<h1>Listing quizzes</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Correct answer</th>
      <th>Answer 1</th>
      <th>Answer 2</th>
      <th>Answer 3</th>
      <th>Answer 4</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.description %></td>
        <td><%= quiz.status %></td>
        <td><%= quiz.correct_answer %></td>
        <td><%= quiz.answer_1 %></td>
        <td><%= quiz.answer_2 %></td>
        <td><%= quiz.answer_3 %></td>
        <td><%= quiz.answer_4 %></td>
        <td><%= quiz.status %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path, :role => 'button', :class => "notice"  %>
