<%= link_to ' Edit', edit_quiz_path(@quiz), :class => "notice pull-right fa fa-pencil-square-o", :role => "button" %>
<%= link_to ' Back', quizzes_path, :class => "default pull-right fa fa-chevron-left", :role => "button" %>

<h1><%= @quiz.title %></h1>

  <h3>Question:</h3>
  <%= raw RDiscount.new(@quiz.description, :smart, :footnotes ).to_html %>


<p>
  <strong>A.</strong>
  <%= @quiz.answer_1 %>
</p>

<p>
  <strong>B.</strong>
  <%= @quiz.answer_2 %>
</p>

<p>
  <strong>C.</strong>
  <%= @quiz.answer_3 %>
</p>

<p>
  <strong>D.</strong>
  <%= @quiz.answer_4 %>
</p>
<p>
  <strong>Correct answer:</strong>
  <%= @quiz.correct_answer %>
</p>
