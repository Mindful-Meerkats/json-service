<h1>Listing Questions</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @random_questions.each do |random_question| %>
      <tr>
        <td><%= link_to random_question.question, random_question %></td>
        <td><%= link_to ' ', edit_random_question_path(random_question), :class => "fa fa-pencil-square-o" %></td>
        <td><%= link_to ' ', random_question, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Random question', new_random_question_path, :role => 'button', :class => "notice" %>
