<h1>Listing random_questions</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer 1</th>
      <th>Answer 2</th>
      <th>Answer 3</th>
      <th>Answer 4</th>
      <th>Correct answer</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @random_questions.each do |random_question| %>
      <tr>
        <td><%= random_question.question %></td>
        <td><%= random_question.answer_1 %></td>
        <td><%= random_question.answer_2 %></td>
        <td><%= random_question.answer_3 %></td>
        <td><%= random_question.answer_4 %></td>
        <td><%= random_question.correct_answer %></td>
        <td><%= random_question.status %></td>
        <td><%= link_to 'Show', random_question %></td>
        <td><%= link_to 'Edit', edit_random_question_path(random_question) %></td>
        <td><%= link_to 'Destroy', random_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Random question', new_random_question_path, :role => 'button', :class => "notice" %>
